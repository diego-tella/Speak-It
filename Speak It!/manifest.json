{
    "name": "Speak It!",
    "manifest_version":2,
    "version":"1.0",
    "description": "Allows you to transform any writing into a simple audio",
    "icons":{
        "128":"icon128.png",
        "48":"icon48.png",
        "16":"icon16.png"
    },
    "browser_action":{
        "default_icon":"icon16.png",
        "default_popup":"popup.html"
    },
    "permissions": [
        "contextMenus",
        "tts"
    ],
    
    "background": {
        "scripts": ["eventsPage.js"],
        "persistent": false
    }

}